#!/bin/bash

git pull

# Push
git add -A .
git commit -am "$(date)"
# git push
git push git@github.com:yamadharma/karma.git

# Mirror
#git push --mirror git@github.com:yamadharma/karma.git
#git push --mirror git@bitbucket.org:yamadharma/gentoo-portage-local.git

# git compress
if [[ $1 == "compress" ]]
then
    if [[ -d .git ]]
    then
	git fsck
	git gc --prune=now
	git gc --aggressive --prune=now
    fi
fi

+    m_aFL_StartingAngle( this, SchResId( FL_STARTING_ANGLE ) ),
+    m_aAngleDial( this, SchResId( CT_ANGLE_DIAL ) ),
+    m_aFT_Degrees( this, SchResId( FT_ROTATION_DEGREES ) ),
+    m_aNF_StartingAngle( this, SchResId( NF_STARTING_ANGLE ) )
